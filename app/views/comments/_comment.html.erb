<article>
    <header class="text-right be-small">
        <%= time_ago_in_words(comment.created_at) %> ago - <%= link_to "Borrar", [@article,comment], class:"red" %>
    </header>
    <div class="row">
        <div class="col-xs-5 col-md-5">
            <div class="box">
                <%= image_tag(comment.user.avatar)%>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-md-12">
        <div class="box">
            <%= comment.body%>
        </div>
    </div>
</article>