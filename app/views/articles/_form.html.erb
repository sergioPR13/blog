<h1> <%= name %> Artículo </h1>
<%= form_for(@article) do |f| %>
    <% @article.errors.full_messages.each do |message| %>
        <div class="be-red white top-space">
            * <%= message %>
        </div>
    <%end%>
    <div class="field">
        <%= f.text_field :title, placeholder: "Título del artículo", class:"form-control" %>
    </div>
    <div class="field">
        <%= f.text_field :body, placeholder: "Escribe aquí el título", style:"height:250px;", class:"form-control" %>
    </div>
    <div class="field">
        <%= f.submit "Enviar", class:"btn be-red white large-padding" %>
    </div>
<%end%>